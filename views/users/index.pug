extends ../layouts/common
block content
		h1 
		span.mr-3 Users
		a.btn.btn-primary(href="/users/create") New
		
		.container.pt-3
		form.ml-auto(action="/users/search" ,method="GET" ,title="Type name",class="d-flex",class="mb-3")
			input(type="text" name='q',class="form-control",class="d-flex",class="col-sm-1")
			button(class="btn btn-primary ml-2") Search
		table.table
			tr
				th Name
				th Phone
				th
			each user in users
				tr
					td=user.name
					td=user.phone		
					td
						a.btn.btn-success(href="/users/" + user.id) View 